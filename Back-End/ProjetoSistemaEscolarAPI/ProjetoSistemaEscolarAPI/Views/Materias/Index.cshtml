@model IEnumerable<ProjetoSistemaEscolarAPI.Models.Materias>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeDaMateria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfessorDaMateria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdTurmasMatriculadas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeDaMateria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfessorDaMateria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdTurmasMatriculadas)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MateriaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MateriaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MateriaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
