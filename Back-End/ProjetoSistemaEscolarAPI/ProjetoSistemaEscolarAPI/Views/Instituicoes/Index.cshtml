@model IEnumerable<ProjetoSistemaEscolarAPI.Models.Instituicao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoInstituicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdAlunos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdTurmas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdCursos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoInstituicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdAlunos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdTurmas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdCursos)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdInstituicao">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdInstituicao">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdInstituicao">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
